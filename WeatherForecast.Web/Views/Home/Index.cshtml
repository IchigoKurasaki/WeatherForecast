@model WeatherForecast.Web.Models.WeatherForecastViewModel

@{
    ViewData["Title"] = "Прогноз погоды";
}

<h2>@ViewData["Title"]</h2>
<form method="get">

    <div class="form-group">
        <label for="Filter.City">Город</label>
        @Html.DropDownListFor(m => m.Filter.City, Model.Cities, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="Filter.Date">Дата</label>
        @Html.DropDownListFor(m => m.Filter.Date, Model.Dates, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <input type="submit" formmethod="post" value="Узнать" class="btn btn-outline-secondary" />
    </div>
</form>

<table class="table">
    <tr>
        <th>Город</th>
        <th>День</th>
        <th>Дата</th>
        <th>Описание</th>
        <th>Минимальная температура</th>
        <th>Максимальная температура</th>
        <th>Осадков, мм</th>
        <th>Скорость ветра, м/c</th>
        <th></th>
    </tr>
    @if (Model.WeatherForecastData != null)
    {
    @foreach (var item in Model.WeatherForecastData)
    {
<tr>
    <td>@item.City</td>
    <td>@item.DayOfWeek</td>
    <td>@item.Day</td>
    <td>@item.Description</td>
    <td>@item.MinTemperature</td>
    <td>@item.MaxTemperature</td>
    <td>@item.Rainfall</td>
    <td>@item.WindSpeed</td>

</tr>
    }}
</table>